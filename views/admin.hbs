<!-- ============================================================= SECTION – HERO ============================================================= -->

<section id="hero" class="img-bg-bottom img-bg-soft tint-bg" style="background-image: url({{ event.backgroundImageUrl }});">
	<div class="container inner">
		<div class="row">
			<div class="col-sm-10">
				<header>
					<h1>{{event.name}}<br/>Admin</h1>
				</header>
			</div><!-- /.col -->
		</div><!-- ./row -->
	</div><!-- /.container -->
</section>

<!-- ============================================================= SECTION – HERO : END ============================================================= -->

<!-- ============================================================= SECTION – SERVICES ============================================================= -->

<section id="services">
  <div class="container inner">
    <div class="row">
      <div class="col-xs-12">
        <div class="tabs tabs-services tabs-circle-top tab-container">

          <ul class="etabs text-center">
            <li class="tab"><a href="#tab-1"><div><i class="icon-users-1"></i></div>Participants</a></li>
            <li class="tab"><a href="#tab-2"><div><i class="icon-github"></i></div>Submissions</a></li>
						<li class="tab"><a href="#tab-3"><div><i class="icon-edit"></i></div>Challenge</a></li>
          </ul><!-- /.etabs -->

          <div class="panel-container">

            <div class="tab-content" id="tab-1">
              <div class="row">
                <div class="col-md-8 col-sm-9 center-block">
                  <ol>
                  {{#each event.teams}}
                    <li> <b><a href="/{{../event.id}}/teams/{{this.id}}">{{this.name}}</a></b><br/>
                      <ul>
                        {{#each this.members}}
                        <li><a href="http://www.topcoder.com/member-profile/{{this.handle}}" target="_blank">{{this.handle}}</a> {{#if this.isTeamLeader}}(team leader){{/if}} </li>
                        {{/each}}
                      </ul>
                      APIs: {{this.apiSpins}}
                  {{/each}}
                  </ol>
                </div><!-- /.col -->
              </div><!-- /.row -->
            </div><!-- /.tab-content -->

            <div class="tab-content" id="tab-2">
              <div class="row">
                <div class="col-md-8 col-sm-9 center-block">
                  <ol>
                  {{#each submissions}}
                    <li> <a href="/{{event}}/teams/{{team}}">{{teamName}}</a>
                      <ul class="contacts">
                        <li><i class="icon-video"></i> <a href="{{video}}" target="_blank">{{video}}</a></li>
                        <li><i class="icon-github"></i> <a href="{{repoUrl}}" target="_blank">{{repoUrl}}</a></li>
                      </ul><!-- /.contacts -->
                  {{/each}}
                  </ol>
                </div><!-- /.col -->
              </div><!-- /.row -->
            </div><!-- /.tab-content -->

						<div class="tab-content" id="tab-3">
              <div class="row">
                <div class="col-md-8 col-sm-9 center-block">
									<p>You can update only a few settings from this page. The rest will have to be done in Mongo.</p>

									<form class="forms" data-toggle="validator" role="form" action="/{{event.id}}/admin" method="post">


										<div class="row">
					            <div class="col-sm-7">
					              <div>Registration Open?</div>
												<select name="registrationOpen">
													<option value="true">Yes</option>
													<option value="false" {{#unless event.registrationOpen}}selected{{/unless}}>No</option>
												</select>
					            </div><!-- /.col -->
					          </div><!-- /.row -->

										<div class="row">
					            <div class="col-sm-7">
					              <div>API Spinning Open?</div>
					              <select name="spinningOpen">
													<option value="true">Yes</option>
													<option value="false" {{#unless event.spinningOpen}}selected{{/unless}}>No</option>
												</select>
					            </div><!-- /.col -->
					          </div><!-- /.row -->

										<button type="submit" class="btn btn-default btn-submit">Submit</button>

					        </form>


                </div><!-- /.col -->
              </div><!-- /.row -->
            </div><!-- /.tab-content -->

        </div><!-- /.tabs -->
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section>

<!-- ============================================================= SECTION – SERVICES : END ============================================================= -->
